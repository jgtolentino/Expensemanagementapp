# =============================================================================
# InsightPulse AI Enterprise - Environment Variables
# =============================================================================
# Copy this file to .env and configure for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_DB=insightpulse
POSTGRES_USER=odoo
POSTGRES_PASSWORD=changeme_secure_password

# -----------------------------------------------------------------------------
# Odoo
# -----------------------------------------------------------------------------
ODOO_PORT=8069
ODOO_LONGPOLL_PORT=8072

# Security - Generate with: openssl rand -hex 32
ODOO_ENCRYPTION_KEY=

# Modules to install on startup
INSTALL_MODULES=ipai_ppm_clarity,ipai_finance_ssc,ipai_bir_compliance

# Auto-upgrade modules on container restart
AUTO_UPGRADE=true

# -----------------------------------------------------------------------------
# Canvas UI (React)
# -----------------------------------------------------------------------------
CANVAS_UI_PORT=3000

# -----------------------------------------------------------------------------
# Redis (Production)
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# Monitoring (Optional)
# -----------------------------------------------------------------------------
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# -----------------------------------------------------------------------------
# SMTP (Email)
# -----------------------------------------------------------------------------
SMTP_SERVER=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=
