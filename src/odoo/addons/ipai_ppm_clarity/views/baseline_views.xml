<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Project Baseline Views -->
    <record id="ipai_project_baseline_tree" model="ir.ui.view">
        <field name="name">ipai.project.baseline.tree</field>
        <field name="model">ipai.project.baseline</field>
        <field name="arch" type="xml">
            <tree string="Project Baselines">
                <field name="name"/>
                <field name="revision"/>
                <field name="project_id"/>
                <field name="baseline_start"/>
                <field name="baseline_finish"/>
                <field name="baseline_hours"/>
                <field name="is_current" widget="boolean_toggle"/>
                <field name="created_by_id"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="ipai_project_baseline_form" model="ir.ui.view">
        <field name="name">ipai.project.baseline.form</field>
        <field name="model">ipai.project.baseline</field>
        <field name="arch" type="xml">
            <form string="Project Baseline">
                <header>
                    <button name="action_set_current" string="Set as Current" type="object" class="btn-primary" invisible="is_current"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-tasks" type="object" name="action_view_snapshots">
                            <field name="task_snapshot_ids" string="Task Snapshots" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Current" invisible="not is_current"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Baseline Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Baseline Info">
                            <field name="project_id"/>
                            <field name="revision"/>
                            <field name="is_current"/>
                            <field name="created_by_id"/>
                            <field name="create_date"/>
                        </group>
                        <group string="Baseline Snapshot">
                            <field name="baseline_start"/>
                            <field name="baseline_finish"/>
                            <field name="baseline_hours"/>
                            <field name="baseline_cost"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Task Snapshots" name="task_snapshots">
                            <field name="task_snapshot_ids">
                                <tree>
                                    <field name="wbs_code"/>
                                    <field name="task_name"/>
                                    <field name="start_date"/>
                                    <field name="finish_date"/>
                                    <field name="duration_days"/>
                                    <field name="planned_hours"/>
                                    <field name="percent_complete" widget="progressbar"/>
                                    <field name="start_variance_days" decoration-danger="start_variance_days &gt; 0" decoration-success="start_variance_days &lt; 0"/>
                                    <field name="finish_variance_days" decoration-danger="finish_variance_days &gt; 0" decoration-success="finish_variance_days &lt; 0"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Baseline Task Snapshot Views -->
    <record id="ipai_baseline_task_snapshot_tree" model="ir.ui.view">
        <field name="name">ipai.baseline.task.snapshot.tree</field>
        <field name="model">ipai.baseline.task.snapshot</field>
        <field name="arch" type="xml">
            <tree string="Baseline Task Snapshots">
                <field name="wbs_code"/>
                <field name="task_name"/>
                <field name="task_id"/>
                <field name="start_date"/>
                <field name="finish_date"/>
                <field name="duration_days"/>
                <field name="planned_hours"/>
                <field name="percent_complete" widget="progressbar"/>
                <field name="start_variance_days" decoration-danger="start_variance_days &gt; 0" decoration-success="start_variance_days &lt;= 0"/>
                <field name="finish_variance_days" decoration-danger="finish_variance_days &gt; 0" decoration-success="finish_variance_days &lt;= 0"/>
            </tree>
        </field>
    </record>

    <record id="ipai_baseline_task_snapshot_form" model="ir.ui.view">
        <field name="name">ipai.baseline.task.snapshot.form</field>
        <field name="model">ipai.baseline.task.snapshot</field>
        <field name="arch" type="xml">
            <form string="Baseline Task Snapshot">
                <sheet>
                    <group>
                        <group string="Task Reference">
                            <field name="baseline_id"/>
                            <field name="task_id"/>
                            <field name="task_name"/>
                            <field name="wbs_code"/>
                        </group>
                        <group string="Baseline Schedule">
                            <field name="start_date"/>
                            <field name="finish_date"/>
                            <field name="duration_days"/>
                            <field name="planned_hours"/>
                            <field name="percent_complete" widget="progressbar"/>
                        </group>
                    </group>
                    <group string="Variance">
                        <group>
                            <field name="start_variance_days"/>
                        </group>
                        <group>
                            <field name="finish_variance_days"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Baseline Wizard -->
    <record id="ipai_baseline_wizard_form" model="ir.ui.view">
        <field name="name">ipai.baseline.wizard.form</field>
        <field name="model">ipai.baseline.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Baseline">
                <group>
                    <field name="project_id" readonly="1"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="set_as_current"/>
                </group>
                <footer>
                    <button name="action_create" string="Create Baseline" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Extended Project Form - Baseline Section -->
    <record id="ipai_project_form_baselines" model="ir.ui.view">
        <field name="name">project.project.form.baselines</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="priority">55</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_baselines" type="object" class="oe_stat_button" icon="fa-history">
                    <field name="baseline_count" widget="statinfo" string="Baselines"/>
                </button>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Baseline" name="baselines">
                    <group>
                        <group string="Current Baseline">
                            <field name="current_baseline_id"/>
                        </group>
                        <group>
                            <button name="action_create_baseline" string="Create New Baseline" type="object" class="btn-secondary"/>
                            <button name="action_compare_baseline" string="Compare to Baseline" type="object" class="btn-secondary"/>
                        </group>
                    </group>
                    <field name="baseline_ids">
                        <tree>
                            <field name="name"/>
                            <field name="revision"/>
                            <field name="baseline_start"/>
                            <field name="baseline_finish"/>
                            <field name="baseline_hours"/>
                            <field name="is_current" widget="boolean_toggle"/>
                            <field name="create_date"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_ipai_project_baselines" model="ir.actions.act_window">
        <field name="name">Project Baselines</field>
        <field name="res_model">ipai.project.baseline</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create project baselines to track schedule variances
            </p>
            <p>
                Baselines capture a snapshot of your project schedule for comparison.
            </p>
        </field>
    </record>

    <record id="action_ipai_baseline_snapshots" model="ir.actions.act_window">
        <field name="name">Baseline Task Snapshots</field>
        <field name="res_model">ipai.baseline.task.snapshot</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
