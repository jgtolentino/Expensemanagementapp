<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Canvas Widget Tree View -->
    <record id="ipai_canvas_widget_view_tree" model="ir.ui.view">
        <field name="name">ipai.canvas.widget.view.tree</field>
        <field name="model">ipai.canvas.widget</field>
        <field name="arch" type="xml">
            <tree string="Widgets" editable="bottom">
                <field name="title"/>
                <field name="widget_type" widget="badge"/>
                <field name="target_model"/>
                <field name="operation"/>
                <field name="format_type"/>
                <field name="group_by_field"/>
                <field name="col_span"/>
                <field name="position_x"/>
                <field name="position_y"/>
                <field name="color" widget="color"/>
                <field name="canvas_id"/>
            </tree>
        </field>
    </record>

    <!-- Canvas Widget Form View -->
    <record id="ipai_canvas_widget_view_form" model="ir.ui.view">
        <field name="name">ipai.canvas.widget.view.form</field>
        <field name="model">ipai.canvas.widget</field>
        <field name="arch" type="xml">
            <form string="Canvas Widget">
                <sheet>
                    <div class="oe_title">
                        <label for="title"/>
                        <h1>
                            <field name="title" placeholder="Widget Title"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Widget Type">
                            <field name="widget_type" widget="radio"/>
                            <field name="canvas_id"/>
                            <field name="project_id" readonly="1"/>
                        </group>
                        <group string="Appearance">
                            <field name="color" widget="color"/>
                            <field name="icon"/>
                        </group>
                    </group>

                    <group string="Data Source">
                        <group>
                            <field name="target_model"/>
                            <field name="operation"/>
                            <field name="format_type"/>
                        </group>
                        <group>
                            <field name="group_by_field"/>
                            <field name="aggregate_field"/>
                            <field name="limit"/>
                        </group>
                    </group>

                    <group string="Sorting">
                        <group>
                            <field name="sort_by"/>
                            <field name="sort_order" widget="radio"/>
                        </group>
                    </group>

                    <group string="Layout Position">
                        <group>
                            <field name="col_span"/>
                            <field name="row_span"/>
                        </group>
                        <group>
                            <field name="position_x"/>
                            <field name="position_y"/>
                        </group>
                    </group>

                    <group string="Progress Ring Settings" invisible="widget_type != 'progress_ring'">
                        <group>
                            <field name="target_value"/>
                            <field name="actual_field"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Filters" name="filters">
                            <field name="filters_json" widget="ace" options="{'mode': 'json'}"/>
                            <div class="alert alert-info">
                                <strong>Filter Format:</strong>
                                <code>[{"field": "state", "operator": "=", "value": "done"}]</code>
                            </div>
                        </page>
                        <page string="Table Columns" name="table_columns" invisible="widget_type != 'table'">
                            <field name="table_columns_json" widget="ace" options="{'mode': 'json'}"/>
                            <div class="alert alert-info">
                                <strong>Column Format:</strong>
                                <code>[{"field": "name", "label": "Name"}, {"field": "state", "label": "Status"}]</code>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Canvas Widget Kanban View -->
    <record id="ipai_canvas_widget_view_kanban" model="ir.ui.view">
        <field name="name">ipai.canvas.widget.view.kanban</field>
        <field name="model">ipai.canvas.widget</field>
        <field name="arch" type="xml">
            <kanban default_group_by="widget_type">
                <field name="title"/>
                <field name="widget_type"/>
                <field name="color"/>
                <field name="target_model"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click" t-att-style="'border-left: 4px solid ' + (record.color.raw_value or '#0078D4')">
                            <div class="oe_kanban_content">
                                <strong><field name="title"/></strong>
                                <div class="text-muted">
                                    <field name="target_model"/> - <field name="operation"/>
                                </div>
                                <div class="mt-1">
                                    <span class="badge bg-primary"><field name="col_span"/>x<field name="row_span"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Canvas Widget Search View -->
    <record id="ipai_canvas_widget_view_search" model="ir.ui.view">
        <field name="name">ipai.canvas.widget.view.search</field>
        <field name="model">ipai.canvas.widget</field>
        <field name="arch" type="xml">
            <search string="Search Widgets">
                <field name="title"/>
                <field name="canvas_id"/>
                <field name="project_id"/>
                <filter string="Number Tiles" name="number_tile" domain="[('widget_type', '=', 'number_tile')]"/>
                <filter string="Progress Rings" name="progress_ring" domain="[('widget_type', '=', 'progress_ring')]"/>
                <filter string="Pie Charts" name="pie" domain="[('widget_type', '=', 'pie')]"/>
                <filter string="Bar Charts" name="bar" domain="[('widget_type', '=', 'bar')]"/>
                <filter string="Tables" name="table" domain="[('widget_type', '=', 'table')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Canvas" name="canvas" context="{'group_by': 'canvas_id'}"/>
                    <filter string="Project" name="project" context="{'group_by': 'project_id'}"/>
                    <filter string="Type" name="type" context="{'group_by': 'widget_type'}"/>
                    <filter string="Target" name="target" context="{'group_by': 'target_model'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="ipai_canvas_widget_action" model="ir.actions.act_window">
        <field name="name">Canvas Widgets</field>
        <field name="res_model">ipai.canvas.widget</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="ipai_canvas_widget_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create canvas widgets
            </p>
            <p>
                Widgets display metrics as tiles, charts, or tables on your canvas.
            </p>
        </field>
    </record>
</odoo>
