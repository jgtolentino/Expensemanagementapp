<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Demo Project -->
        <record id="demo_project_clarity" model="project.project">
            <field name="name">Clarity Demo Project</field>
            <field name="autoschedule_enabled">True</field>
            <field name="schedule_from">start</field>
            <field name="project_start_date" eval="(DateTime.today() - timedelta(days=30)).strftime('%Y-%m-%d')"/>
            <field name="project_finish_date" eval="(DateTime.today() + timedelta(days=60)).strftime('%Y-%m-%d')"/>
        </record>

        <!-- Demo Phases -->
        <record id="demo_phase_initiation" model="ipai.project.phase">
            <field name="name">Initiation</field>
            <field name="project_id" ref="demo_project_clarity"/>
            <field name="sequence">10</field>
            <field name="state">completed</field>
            <field name="start_date" eval="(DateTime.today() - timedelta(days=30)).strftime('%Y-%m-%d')"/>
            <field name="end_date" eval="(DateTime.today() - timedelta(days=20)).strftime('%Y-%m-%d')"/>
        </record>

        <record id="demo_phase_planning" model="ipai.project.phase">
            <field name="name">Planning</field>
            <field name="project_id" ref="demo_project_clarity"/>
            <field name="sequence">20</field>
            <field name="state">completed</field>
            <field name="start_date" eval="(DateTime.today() - timedelta(days=19)).strftime('%Y-%m-%d')"/>
            <field name="end_date" eval="(DateTime.today() - timedelta(days=10)).strftime('%Y-%m-%d')"/>
        </record>

        <record id="demo_phase_execution" model="ipai.project.phase">
            <field name="name">Execution</field>
            <field name="project_id" ref="demo_project_clarity"/>
            <field name="sequence">30</field>
            <field name="state">in_progress</field>
            <field name="start_date" eval="(DateTime.today() - timedelta(days=9)).strftime('%Y-%m-%d')"/>
            <field name="end_date" eval="(DateTime.today() + timedelta(days=30)).strftime('%Y-%m-%d')"/>
        </record>

        <record id="demo_phase_closure" model="ipai.project.phase">
            <field name="name">Closure</field>
            <field name="project_id" ref="demo_project_clarity"/>
            <field name="sequence">40</field>
            <field name="state">draft</field>
            <field name="start_date" eval="(DateTime.today() + timedelta(days=31)).strftime('%Y-%m-%d')"/>
            <field name="end_date" eval="(DateTime.today() + timedelta(days=60)).strftime('%Y-%m-%d')"/>
        </record>

        <!-- Demo Tasks - Initiation Phase -->
        <record id="demo_task_kickoff" model="project.task">
            <field name="name">Project Kickoff</field>
            <field name="project_id" ref="demo_project_clarity"/>
            <field name="phase_id" ref="demo_phase_initiation"/>
            <field name="task_type">milestone</field>
            <field name="wbs_code">1.1</field>
            <field name="wbs_level">2</field>
            <field name="percent_complete">100</field>
            <field name="duration_days">0</field>
            <field name="planned_date_begin" eval="(DateTime.today() - timedelta(days=30))"/>
            <field name="date_deadline" eval="(DateTime.today() - timedelta(days=30))"/>
        </record>

        <record id="demo_task_requirements" model="project.task">
            <field name="name">Gather Requirements</field>
            <field name="project_id" ref="demo_project_clarity"/>
            <field name="phase_id" ref="demo_phase_initiation"/>
            <field name="task_type">task</field>
            <field name="wbs_code">1.2</field>
            <field name="wbs_level">2</field>
            <field name="percent_complete">100</field>
            <field name="duration_days">5</field>
            <field name="planned_hours">40</field>
            <field name="planned_date_begin" eval="(DateTime.today() - timedelta(days=29))"/>
            <field name="date_deadline" eval="(DateTime.today() - timedelta(days=24))"/>
        </record>

        <record id="demo_task_stakeholders" model="project.task">
            <field name="name">Identify Stakeholders</field>
            <field name="project_id" ref="demo_project_clarity"/>
            <field name="phase_id" ref="demo_phase_initiation"/>
            <field name="task_type">task</field>
            <field name="wbs_code">1.3</field>
            <field name="wbs_level">2</field>
            <field name="percent_complete">100</field>
            <field name="duration_days">3</field>
            <field name="planned_hours">24</field>
            <field name="planned_date_begin" eval="(DateTime.today() - timedelta(days=23))"/>
            <field name="date_deadline" eval="(DateTime.today() - timedelta(days=20))"/>
        </record>

        <!-- Demo Tasks - Planning Phase -->
        <record id="demo_task_wbs" model="project.task">
            <field name="name">Create WBS</field>
            <field name="project_id" ref="demo_project_clarity"/>
            <field name="phase_id" ref="demo_phase_planning"/>
            <field name="task_type">task</field>
            <field name="wbs_code">2.1</field>
            <field name="wbs_level">2</field>
            <field name="percent_complete">100</field>
            <field name="duration_days">3</field>
            <field name="planned_hours">24</field>
            <field name="planned_date_begin" eval="(DateTime.today() - timedelta(days=19))"/>
            <field name="date_deadline" eval="(DateTime.today() - timedelta(days=16))"/>
        </record>

        <record id="demo_task_schedule" model="project.task">
            <field name="name">Develop Schedule</field>
            <field name="project_id" ref="demo_project_clarity"/>
            <field name="phase_id" ref="demo_phase_planning"/>
            <field name="task_type">task</field>
            <field name="wbs_code">2.2</field>
            <field name="wbs_level">2</field>
            <field name="percent_complete">100</field>
            <field name="duration_days">4</field>
            <field name="planned_hours">32</field>
            <field name="is_critical">True</field>
            <field name="planned_date_begin" eval="(DateTime.today() - timedelta(days=15))"/>
            <field name="date_deadline" eval="(DateTime.today() - timedelta(days=11))"/>
        </record>

        <record id="demo_task_planning_complete" model="project.task">
            <field name="name">Planning Complete</field>
            <field name="project_id" ref="demo_project_clarity"/>
            <field name="phase_id" ref="demo_phase_planning"/>
            <field name="task_type">milestone</field>
            <field name="wbs_code">2.3</field>
            <field name="wbs_level">2</field>
            <field name="percent_complete">100</field>
            <field name="duration_days">0</field>
            <field name="is_critical">True</field>
            <field name="planned_date_begin" eval="(DateTime.today() - timedelta(days=10))"/>
            <field name="date_deadline" eval="(DateTime.today() - timedelta(days=10))"/>
        </record>

        <!-- Demo Tasks - Execution Phase -->
        <record id="demo_task_design" model="project.task">
            <field name="name">Design Solution</field>
            <field name="project_id" ref="demo_project_clarity"/>
            <field name="phase_id" ref="demo_phase_execution"/>
            <field name="task_type">task</field>
            <field name="wbs_code">3.1</field>
            <field name="wbs_level">2</field>
            <field name="percent_complete">80</field>
            <field name="duration_days">10</field>
            <field name="planned_hours">80</field>
            <field name="is_critical">True</field>
            <field name="planned_date_begin" eval="(DateTime.today() - timedelta(days=9))"/>
            <field name="date_deadline" eval="(DateTime.today() + timedelta(days=1))"/>
        </record>

        <record id="demo_task_develop" model="project.task">
            <field name="name">Develop Features</field>
            <field name="project_id" ref="demo_project_clarity"/>
            <field name="phase_id" ref="demo_phase_execution"/>
            <field name="task_type">task</field>
            <field name="wbs_code">3.2</field>
            <field name="wbs_level">2</field>
            <field name="percent_complete">30</field>
            <field name="duration_days">15</field>
            <field name="planned_hours">120</field>
            <field name="is_critical">True</field>
            <field name="planned_date_begin" eval="(DateTime.today() + timedelta(days=2))"/>
            <field name="date_deadline" eval="(DateTime.today() + timedelta(days=17))"/>
        </record>

        <record id="demo_task_test" model="project.task">
            <field name="name">Testing</field>
            <field name="project_id" ref="demo_project_clarity"/>
            <field name="phase_id" ref="demo_phase_execution"/>
            <field name="task_type">task</field>
            <field name="wbs_code">3.3</field>
            <field name="wbs_level">2</field>
            <field name="percent_complete">0</field>
            <field name="duration_days">8</field>
            <field name="planned_hours">64</field>
            <field name="is_critical">True</field>
            <field name="planned_date_begin" eval="(DateTime.today() + timedelta(days=18))"/>
            <field name="date_deadline" eval="(DateTime.today() + timedelta(days=26))"/>
        </record>

        <record id="demo_task_deploy" model="project.task">
            <field name="name">Deploy to Production</field>
            <field name="project_id" ref="demo_project_clarity"/>
            <field name="phase_id" ref="demo_phase_execution"/>
            <field name="task_type">milestone</field>
            <field name="wbs_code">3.4</field>
            <field name="wbs_level">2</field>
            <field name="percent_complete">0</field>
            <field name="duration_days">0</field>
            <field name="is_critical">True</field>
            <field name="planned_date_begin" eval="(DateTime.today() + timedelta(days=30))"/>
            <field name="date_deadline" eval="(DateTime.today() + timedelta(days=30))"/>
        </record>

        <!-- Demo Dependencies -->
        <record id="demo_dep_req_to_stakeholders" model="ipai.task.dependency">
            <field name="predecessor_id" ref="demo_task_requirements"/>
            <field name="successor_id" ref="demo_task_stakeholders"/>
            <field name="dependency_type">SS</field>
            <field name="lag_days">2</field>
        </record>

        <record id="demo_dep_stakeholders_to_wbs" model="ipai.task.dependency">
            <field name="predecessor_id" ref="demo_task_stakeholders"/>
            <field name="successor_id" ref="demo_task_wbs"/>
            <field name="dependency_type">FS</field>
            <field name="lag_days">0</field>
        </record>

        <record id="demo_dep_wbs_to_schedule" model="ipai.task.dependency">
            <field name="predecessor_id" ref="demo_task_wbs"/>
            <field name="successor_id" ref="demo_task_schedule"/>
            <field name="dependency_type">FS</field>
            <field name="lag_days">0</field>
        </record>

        <record id="demo_dep_schedule_to_milestone" model="ipai.task.dependency">
            <field name="predecessor_id" ref="demo_task_schedule"/>
            <field name="successor_id" ref="demo_task_planning_complete"/>
            <field name="dependency_type">FS</field>
            <field name="lag_days">0</field>
        </record>

        <record id="demo_dep_planning_to_design" model="ipai.task.dependency">
            <field name="predecessor_id" ref="demo_task_planning_complete"/>
            <field name="successor_id" ref="demo_task_design"/>
            <field name="dependency_type">FS</field>
            <field name="lag_days">0</field>
        </record>

        <record id="demo_dep_design_to_develop" model="ipai.task.dependency">
            <field name="predecessor_id" ref="demo_task_design"/>
            <field name="successor_id" ref="demo_task_develop"/>
            <field name="dependency_type">FS</field>
            <field name="lag_days">0</field>
        </record>

        <record id="demo_dep_develop_to_test" model="ipai.task.dependency">
            <field name="predecessor_id" ref="demo_task_develop"/>
            <field name="successor_id" ref="demo_task_test"/>
            <field name="dependency_type">FS</field>
            <field name="lag_days">0</field>
        </record>

        <record id="demo_dep_test_to_deploy" model="ipai.task.dependency">
            <field name="predecessor_id" ref="demo_task_test"/>
            <field name="successor_id" ref="demo_task_deploy"/>
            <field name="dependency_type">FS</field>
            <field name="lag_days">3</field>
        </record>

        <!-- Demo To-Dos -->
        <record id="demo_todo_req_1" model="ipai.task.todo">
            <field name="name">Interview key stakeholders</field>
            <field name="task_id" ref="demo_task_requirements"/>
            <field name="state">done</field>
            <field name="priority">2</field>
        </record>

        <record id="demo_todo_req_2" model="ipai.task.todo">
            <field name="name">Document functional requirements</field>
            <field name="task_id" ref="demo_task_requirements"/>
            <field name="state">done</field>
            <field name="priority">2</field>
        </record>

        <record id="demo_todo_design_1" model="ipai.task.todo">
            <field name="name">Create system architecture diagram</field>
            <field name="task_id" ref="demo_task_design"/>
            <field name="state">done</field>
            <field name="priority">2</field>
        </record>

        <record id="demo_todo_design_2" model="ipai.task.todo">
            <field name="name">Design database schema</field>
            <field name="task_id" ref="demo_task_design"/>
            <field name="state">done</field>
            <field name="priority">1</field>
        </record>

        <record id="demo_todo_design_3" model="ipai.task.todo">
            <field name="name">Create UI mockups</field>
            <field name="task_id" ref="demo_task_design"/>
            <field name="state">open</field>
            <field name="priority">1</field>
            <field name="due_date" eval="(DateTime.today() + timedelta(days=1)).strftime('%Y-%m-%d')"/>
        </record>

        <record id="demo_todo_develop_1" model="ipai.task.todo">
            <field name="name">Set up development environment</field>
            <field name="task_id" ref="demo_task_develop"/>
            <field name="state">done</field>
            <field name="priority">3</field>
        </record>

        <record id="demo_todo_develop_2" model="ipai.task.todo">
            <field name="name">Implement user authentication</field>
            <field name="task_id" ref="demo_task_develop"/>
            <field name="state">open</field>
            <field name="priority">2</field>
            <field name="due_date" eval="(DateTime.today() + timedelta(days=5)).strftime('%Y-%m-%d')"/>
        </record>

        <record id="demo_todo_develop_3" model="ipai.task.todo">
            <field name="name">Build API endpoints</field>
            <field name="task_id" ref="demo_task_develop"/>
            <field name="state">open</field>
            <field name="priority">2</field>
            <field name="due_date" eval="(DateTime.today() + timedelta(days=10)).strftime('%Y-%m-%d')"/>
        </record>

    </data>
</odoo>
